.chat-group-form
  %h1 新規チャットグループ
  = form_for(@group) do |f|
    .chat-group-form__field.clearfix
      .chat-group-form__field--left
        = f.label :chat, 'グループ名', class: 'chat-group-form__label'
      .chat-group-form__field--right
        = f.text_field :name, placeholder: 'グループ名を入力してください', class: "chat-group-form__input", id: "group_chat"
    .chat-group-form__field.clearfix
      .chat-group-form__field--left
        = f.label :chat, 'チャットメンバーを追加', class: 'chat-group-form__label'
      .check_box
        = f.collection_check_boxes(:user_ids, User.all, :id, :nickname) do |b|
          = b.label {b.check_box + b.text}
      .chat-group-form__field--right
        .chat-group-form__search.clearfix
        #user-search-result
    .chat-group-form__field.clearfix
      .chat-group-form__field--left
        = f.label :chat, 'チャットメンバー', class: 'chat-group-form__label'
      .chat-group-form__field--right
        #chat-group-users
          #chat-group-user-22.chat-group-user.clearfix
            = current_user.nickname
    .chat-group-form__field.clearfix
      .chat-group-form__field--left
      .chat-group-form__field--right
        = f.submit type: "submit", value: "Save", class: "chat-group-form__action-btn"
